<div class="content">
  <section>
    <div style="color: red;"><%= flash[:notice] if flash[:notice]  %></div>

    <%= form_for @user, url: sessions_path do |f| %>
      <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div>
        <%= f.submit 'Log In' %>
      </div>
    <% end %>
  </section>
</div>
